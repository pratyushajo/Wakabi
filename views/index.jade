extends layout

block content
  div.text-center
    div.btn-toolbar
      button.btn.btn-primary.btn-large(type="button", data-toggle="modal", data-target="#broadcastrider", id = "broadcast-modal")
        | Promotions
      button.btn.btn-primary.btn-large(type="button", data-toggle="modal", data-target="#broadcastdriver", id = "broadcast-modal")
        | Send Driver Alerts
  div.container
    div.dashboard-wrapper
      h1 Dashboard
      p #{date}
      div.dashboard-content-wrapper
        table.analytics-table
          tr
            td
              img(src='/images/motorcycle.png')
            td
              h1 #{numDrivers}
              p Drivers on Shift
            td
              h1 #{numIdleDrivers}
              p Idle Drivers
            td
              h1 #{numBusyDrivers}
              p Rides in Progress
          tr
            td
              img(src='/images/people.png')
            td
              h1 #{ridesRequested}
              p Rides Requested
            td
              h1 #{ridesCompleted}
              p Rides Completed
            td
              h1 #{ridesFailed}
              p Rides Failed
          tr
            td
              img(src='/images/ratings.png')
            td
              h1 #{positiveFeedback}
              p Good Feedback
            td
              h1 #{negativeFeedback}
              p Bad Feedback
            td
              h1 #{netFeedback}
              p Net Feedback
    div.alerts-wrapper
      h1 Alerts
      ul.alerts-list
        each alert in alerts
          li
            a(href='#{alert.path}')= alert.message
    #broadcastrider.modal.fade(role='dialog')
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') &times;
            |         
            h4.modal-title Send Message
          |       
          .modal-body
            form.form-horizontal(role='form')
              .form-group
                label.control-label.col-md-1.label-format(for='inputMessageRider')
                | Message
                .col-sm-12
                  span &nbsp    
                  input#inputMessageRider.form-control.input-lg(type='text', placeholder='Enter your message')
          |       
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-danger(type='button',method="post", onclick="sendMessageToRider()") Send
     #broadcastdriver.modal.fade(role='dialog')
       .modal-dialog.modal-sm
         .modal-content
           .modal-header
             button.close(type='button', data-dismiss='modal') &times;
             |         
             h4.modal-title Send Message
           |       
           .modal-body
             form.form-horizontal(role='form')
               .form-group
                 label.control-label.col-md-1.label-format(for='inputMessage')
                 | Message
                 .col-sm-12
                   span &nbsp    
                   input#inputMessage.form-control.input-lg(type='text', placeholder='Enter your message')
           |       
           .modal-footer
             button.btn.btn-default(type='button', data-dismiss='modal') Close
             button.btn.btn-danger(type='button',method="post", onclick="sendMessageToDriver()") Send

