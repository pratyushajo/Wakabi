extends layout

block content
  div.container
    div.content
      div.text-center
        div.btn-toolbar
          button.btn.btn-primary.btn-large(onclick="addDriver()") Add 
          button.btn.btn-primary.btn-large(onclick="editDriver()") Edit
      h1 Drivers
      if drivers && drivers.length > 0
        table.drivers-table
          tbody
            tr
              th
                | Name
              th
                | Number
              th
                | License Number
              th
                | Rating
              th
                | Total Rides
              th
                | Rides Remaining
            each driver in drivers
              - var className = ((currentDriver != null) && (driver.num.replace(/\+/g, '') == currentDriver)) ? "highlight" : ""
              tr(class=className)
                td= driver.name
                td= driver.phone_number
                td= driver.license_number
                td= driver.rating
                td= driver.total_rides_completed
                td= driver.number_of_rides_remaining
                td
                  a.edit-link(type="button", data-toggle="modal", data-target="#remove-driver-confirm", onclick="removeDriverClicked(#{driver.num})")
                    | Edit
                td
                  a.remove-link(type="button", data-toggle="modal", data-target="#remove-driver-confirm", onclick="removeDriverClicked(#{driver.num})")
                    | Remove
        #remove-driver-confirm.modal.fade(role='dialog')
          .modal-dialog.modal-sm
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal') &times;
                |         
                h4.modal-title Remove Driver
              |       
              .modal-body
                p.modal-text Are you sure you want to this remove driver?
              |       
              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') No
                button.btn.btn-danger(type='button', onclick="removeDriver()") Yes
      else
        table.drivers-table
          tbody
            tr
              th
                | Name
              th
                | Number
              th
                | License Number
              th
                | Rating
              th
                | Total Rides
              th
                | Rides Remaining